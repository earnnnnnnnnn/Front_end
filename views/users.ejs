<!-- users.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Users</title>
    <link rel="stylesheet" href="../css/style.css" />

</head>
<body>
    <h1>Users</h1>
    <table>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
        <% for(var i = 0; i < users.length; i++) { %>
        <tr>
            <td><%= users[i].title %></td>
            <td><%= users[i].author %></td>
            <td>
                <a href="/users/<%= users[i].id %>">View</a>
                <a href="/update/<%= users[i].id %>">Edit</a>
                <a href="/delete/<%= users[i].id %>">Delete</a>
            </td>
        </tr>
        <% } %>
    </table>
    <a href="/create">Create New users</a>
</body>
</html>
