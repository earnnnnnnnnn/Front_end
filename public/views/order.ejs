<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rental Report</title>
    <link rel="stylesheet" href="../css/report.css">
</head>
<body>
    <div class="container">
        <h2>Report Table (user -> rental -> return)</h2>
        <table>
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Rental ID</th>
                    <th>Return Date</th>
                </tr>
            </thead>
            <tbody>
                <% if (users && rentals && returns) { %>
                    <% users.forEach(user => { %>
                        <% let userRentals = rentals.filter(rental => rental.user_id === user.id); %>
                        <% userRentals.forEach(rental => { %>
                            <% let returnItem = returns.find(r => r.rental_id === rental.id); %>
                            <% if (returnItem) { %>
                                <tr>
                                    <td><%= user.name %></td>
                                    <td><%= rental.id %></td>
                                    <td><%= returnItem.return_date %></td>
                                </tr>
                            <% } %>
                        <% }); %>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="3">No data available</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
