<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <link rel="stylesheet" href="../css/cart.css">
</head>
<body>

    <div class="container">
        <div class="cart">
            <h2>Your Cart</h2>
            <% if (cart.length > 0) { %>
                <p class="item-count">You have <%= cart.length %> item(s) in your cart.</p>
                <% cart.forEach(item => { %>
                    <div class="cart-item" data-id="<%= item.camera_id %>">
                        <img src="../image/<%= item.cameraimg %>" alt="<%= item.cameraname %>">
                            <div class="item-details">
                                <p class="item-name"><%= item.cameraname %></p>
                                <label>Return Date:</label>
                                <input type="date" class="return-date" data-id="<%= item.camera_id %>" min="<%= new Date().toISOString().split('T')[0] %>">
                            </div>
                            <p class="price" data-price="<%= item.price_per_day %>"><%= item.price_per_day %> บาท</p>

                            <form action="/cart" method="POST" id="form-<%= item.camera_id %>">
                                <input type="hidden" name="camera_id" value="<%= item.camera_id %>">
                                <input type="hidden" name="end_date" class="end-date" value=""> <!-- Initially empty, will be filled by JS -->
                                <button type="button" class="remove-btn" data-id="<%= item.camera_id %>">Remove</button>
                            </form>
                    </div>
                <% }); %>
                <a href="/" class="back">Continue Shopping</a>
            <% } else { %>
                <p>Your cart is empty.</p>
            <% } %>
            <div class="summary">
                <h2>Summary</h2>
                <div class="summary-item">
                    <span>Total:</span>
                    <span class="total"><%= totalPrice %> บาท</span>
                </div>
                <form action="/paymentfrom" method="POST">
                    <button type="submit" class="checkout">Proceed to Checkout</button>
                </form>
            </div>
            
        </div>
    </div>

    <script>
       document.querySelectorAll('.return-date').forEach(input => {
        input.addEventListener('change', function() {
            const itemId = this.getAttribute('data-id');
            const selectedDate = new Date(this.value);
            const today = new Date();
            const days = Math.max(1, Math.ceil((selectedDate - today) / (1000 * 60 * 60 * 24)));

            
            const form = document.querySelector(`#form-${itemId}`);
            const endDateInput = form.querySelector('.end-date');
            endDateInput.value = selectedDate.toISOString().split('T')[0]; 

            updateTotalPrice(itemId, days); 
        });
    });

    function updateTotalPrice(itemId, days) {
        const item = document.querySelector(`#cart-item-${itemId}`);
        const pricePerDay = parseFloat(item.dataset.price);
        const totalPrice = pricePerDay * days;
        item.querySelector('.total-price').textContent = `${totalPrice} บาท`;
    }

        function updateSummary() {
            let newTotal = 0;
            document.querySelectorAll('.cart-item .price').forEach(priceElement => {
                const price = parseFloat(priceElement.innerText.replace(' บาท', ''));
                if (!isNaN(price)) {
                    newTotal += price;
                }
            });
            document.querySelector('.total').innerText = `${newTotal} บาท`;  // อัปเดตยอดรวม
        }

    </script>
</body>
</html>