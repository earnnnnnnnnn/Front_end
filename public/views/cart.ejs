<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="../css/cart.css">
</head>
<body>
    <div class="container">
        
        <div class="cart">
            <h2>Shopping Cart</h2>
            <!-- แสดงจำนวนสินค้าที่มีในตะกร้า -->
            <p class="item-count"><%= cartItems ? cartItems.length : 0 %> Items</p> 
            
            <div class="cart-items-list">
                <% if (cartItems && cartItems.length > 0) { %>
                    <% cartItems.forEach(function(item) { %>
                        <div class="cart-item">
                            <div class="item-details">
                                <% const camera = cameras.find(camera => camera.camera_id == item.camera_id); %>
                                <img src="../image/<%= camera.cameraimg %>" alt="">
                                <% if (camera) { %>
                                    <h3><%= camera.cameraname %></h3>
                                    <p>Price: $<%= item.total_price %></p>
                                <% } else { %>
                                    <h3>Unknown Camera</h3>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>Your cart is empty.</p>
                <% } %>
            </div>
            
            <a href="/" class="back">← Back to shop</a>
        </div>
        
        
    </div>

    <script>
        function checkout() {
            window.location.href = "/checkout";
        }
    </script>
</body>
</html>
