document.querySelector('#checkout-form').addEventListener('submit', function(event) {
    const cartItems = document.querySelectorAll('.cart-item'); // ดึงรายการสินค้าทั้งหมดในตะกร้า
    if (cartItems.length === 0) {
        alert('คุณไม่มีสินค้าภายในตะกร้า กรุณาเลือกสินค้าก่อนทำการเช็คเอาท์');
        event.preventDefault(); // หยุดการส่งฟอร์มถ้าไม่มีสินค้า
    }
});

    function updateTotalPrice() {
    let total = 0;
    document.querySelectorAll('.cart-item').forEach(item => {
        const pricePerDay = parseFloat(item.querySelector('.price').getAttribute('data-price'));
        
        if (!isNaN(pricePerDay)) {
            const itemTotalPrice = pricePerDay; // Assuming rental for 3 days
            total += itemTotalPrice;
        }
    });

    document.querySelector('.total').innerText = total + ' บาท';
}
    function updateCartQuantity(input) {
            const camera_id = input.closest('.cart-item').querySelector('input[name="camera_id"]').value;
            const quantity = input.value;
    
            // Send updated quantity to the backend using fetch
            fetch('/updateCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ camera_id, quantity })
            })
            .then(response => response.json())
            .then(data => {
                console.log('Cart updated:', data);
            })
            .catch((error) => {
                console.error('Error updating cart:', error);
            });
        }
        updateTotalPrice();
    </script>

