<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <link rel="stylesheet" href="../css/cart.css">
</head>
<body>

    <div class="container">
        <div class="cart">
            <h2>Your Cart</h2>
            <% if (cart.length > 0) { %>
                <p class="item-count">You have <%= cart.length %> item(s) in your cart.</p>
                <% cart.forEach(item => { %>
                    <div class="cart-item">
                        <img src="../image/<%= item.cameraimg %>" alt="<%= item.cameraname %>">
                        <div class="item-details">
                            <p class="item-name"><%= item.cameraname %></p>
                            <div class="quantity">
                                <button class="decrease" data-id="<%= item.camera_id %>">-</button>
                                <input type="text" class="quantity-input" value="<%= item.rental_days %>" readonly>
                                <button class="increase" data-id="<%= item.camera_id %>">+</button>
                            </div>
                        </div>
                        <p class="price"><%= item.total_price %> บาท</p>
                        <form action="/removeFromCart" method="POST">
                            <input type="hidden" name="camera_id" value="<%= item.camera_id %>">
                            <button type="button" class="remove-btn" data-id="<%= item.camera_id %>">Remove</button>
                        </form>

                    </div>
                <% }); %>
                <a href="/" class="back">Continue Shopping</a>
            <% } else { %>
                <p>Your cart is empty.</p>
            <% } %>
            <div class="summary">
                <h2>Summary</h2>
                <div class="summary-item">
                    <span>Total:</span>
                    <span class="total"><%= totalPrice %> บาท</span>
                </div>
                <form action="/paymentfrom" method="POST">
                    <button type="submit" class="checkout">Proceed to Checkout</button>
                </form>
            </div>
            
            <script>
                // ตรวจสอบและจัดการกับปุ่มลดจำนวนสินค้า (-)
                document.querySelectorAll('.decrease').forEach(button => {
                    button.addEventListener('click', function() {
                        const quantityInput = this.nextElementSibling;  // หาช่อง input ที่เป็นจำนวนสินค้า
                        let quantity = parseInt(quantityInput.value);  // แปลงค่าที่อ่านมาเป็นตัวเลข
            
                        if (isNaN(quantity) || quantity <= 1) {
                            quantity = 1;  // ถ้าค่าเป็น NaN หรือ 0 หรือ < 1 ให้กำหนดเป็น 1
                        } else {
                            quantity--;  // ลดจำนวนสินค้า
                        }
            
                        quantityInput.value = quantity;  // อัปเดตช่อง input
                        updateTotalPrice(this.getAttribute('data-id'), quantity);  // อัปเดตราคาหากต้องการ
                    });
                });
            
                // ตรวจสอบและจัดการกับปุ่มเพิ่มจำนวนสินค้า (+)
                document.querySelectorAll('.increase').forEach(button => {
                    button.addEventListener('click', function() {
                        const quantityInput = this.previousElementSibling;  // หาช่อง input ที่เป็นจำนวนสินค้า
                        let quantity = parseInt(quantityInput.value);  // แปลงค่าที่อ่านมาเป็นตัวเลข
            
                        if (isNaN(quantity)) {
                            quantity = 1;  // ถ้าเป็น NaN ให้เริ่มต้นที่ 1
                        } else {
                            quantity++;  // เพิ่มจำนวนสินค้า
                        }
            
                        quantityInput.value = quantity;  // อัปเดตช่อง input
                        updateTotalPrice(this.getAttribute('data-id'), quantity);  // อัปเดตราคาหากต้องการ
                    });
                });
            
                // ฟังก์ชันที่ใช้สำหรับอัปเดตราคา
                function updateTotalPrice(itemId, quantity) {
                    // คุณสามารถเพิ่มการคำนวณราคาตามจำนวนสินค้าได้ที่นี่
                    const priceElement = document.querySelector(`.cart-item[data-id="${itemId}"] .price`);
                    const pricePerItem = parseInt(priceElement.innerText.replace(" บาท", ""));
                    const totalPrice = pricePerItem * quantity;
            
                    priceElement.innerText = `${totalPrice} บาท`;
                }
            
                // ลบสินค้าออกจากตะกร้า
                document.querySelectorAll('.remove-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        const itemId = this.getAttribute('data-id');
                        // ลบสินค้าจากหน้าเว็บ
                        const itemElement = document.querySelector(`.cart-item[data-id="${itemId}"]`);
                        itemElement.remove();
            
                        // อัพเดตจำนวนสินค้าที่เหลือในตะกร้า
                        const itemCount = document.querySelector('.item-count');
                        const newItemCount = parseInt(itemCount.innerText.split(' ')[2]) - 1;
                        itemCount.innerText = `You have ${newItemCount} item(s) in your cart.`;
                    });
                });
            </script>
            
</body>
</html>
