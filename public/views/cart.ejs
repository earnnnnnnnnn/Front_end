<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cart</title>
    <link rel="stylesheet" href="../css/cart.css">
</head>
<body>

    <div class="container">
        <div class="cart">
            <h2>Your Cart</h2>
            <% if (cart.length > 0) { %>
                <p class="item-count">You have <%= cart.length %> item(s) in your cart.</p>
                <% cart.forEach(item => { %>
                    <div class="cart-item">
                        <img src="../image/<%= item.cameraimg %>" alt="<%= item.cameraname %>">
                        <div class="item-details">
                            <p class="item-name"><%= item.cameraname %></p>
                            <div class="quantity">
                                <button class="decrease" data-id="<%= item.camera_id %>">-</button>
                                <input type="text" class="quantity-input" value="<%= item.rental_days %>" readonly>
                                <button class="increase" data-id="<%= item.camera_id %>">+</button>
                            </div>
                        </div>
                        <p class="price"><%= item.total_price %> บาท</p>
                        <form action="/removeFromCart" method="POST">
                            <input type="hidden" name="camera_id" value="<%= item.camera_id %>">
                            <button type="button" class="remove-btn" data-id="<%= item.camera_id %>">Remove</button>
                        </form>

                    </div>
                <% }); %>
                <a href="/" class="back">Continue Shopping</a>
            <% } else { %>
                <p>Your cart is empty.</p>
            <% } %>
            <div class="summary">
                <h2>Summary</h2>
                <div class="summary-item">
                    <span>Total:</span>
                    <span class="total"><%= totalPrice %> บาท</span>
                </div>
                <form action="/paymentfrom" method="POST">
                    <button type="submit" class="checkout">Proceed to Checkout</button>
                </form>
            </div>
            
            <script>
                document.querySelectorAll('.remove-btn').forEach(button => {
                    button.addEventListener('click', function() {
                        const cameraId = this.getAttribute('data-id');
                        
                        // Send AJAX request to remove item from cart and database
                        fetch('/removeFromCart', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ camera_id: cameraId })
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                // Remove the item from the front-end
                                const itemElement = document.querySelector(`.cart-item[data-id="${cameraId}"]`);
                                itemElement.remove();
                                // Optionally update the item count
                                const itemCount = document.querySelector('.item-count');
                                const newItemCount = parseInt(itemCount.innerText.split(' ')[2]) - 1;
                                itemCount.innerText = `You have ${newItemCount} item(s) in your cart.`;
                            } else {
                                alert('Failed to remove item from cart.');
                            }
                        })
                        .catch(error => console.error('Error:', error));
                    });
                });
            </script>
            
</body>
</html>
